    "version": "0.2.0",
    "configurations": [
        {
            "type": "kotlin",
            "request": "attach",
            "name": "Kotlin Attach",
            "projectRoot": "${workspaceFolder}/HelloKotlin",
            "hostName": "0.0.0.0",
            "port": 5005,
            "timeout": 30000
